<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.doctor.doctorappointment.controller.LoginController" style="-fx-background-color: #f4f7fc; -fx-font-family: 'Segoe UI', sans-serif; -fx-alignment: center;">
    <children>
        <!-- Title -->
        <Label layoutX="206.0" layoutY="50.0" prefHeight="39.0" prefWidth="188.0" text="Login" textFill="#0f89fc" style="-fx-font-size: 30px; -fx-font-weight: bold;"/>

        <!-- Username Field -->
        <TextField layoutX="150.0" layoutY="150.0" prefWidth="300.0" promptText="Username" style="-fx-background-color: #ffffff; -fx-border-radius: 5px; -fx-padding: 5px; -fx-border-color: #ccc;"/>

        <!-- Password Field -->
        <PasswordField layoutX="150.0" layoutY="210.0" prefWidth="300.0" promptText="Password" style="-fx-background-color: #ffffff; -fx-border-radius: 5px; -fx-padding: 5px; -fx-border-color: #ccc;"/>

        <!-- Login Button -->
        <Button layoutX="230.0" layoutY="270.0" prefHeight="50.0" prefWidth="140.0" text="Login" style="-fx-background-color: #1AA7EC; -fx-text-fill: white; -fx-font-size: 16px; -fx-border-radius: 5px; -fx-padding: 10px; -fx-cursor: hand;"/>
    </children>
</AnchorPane>
