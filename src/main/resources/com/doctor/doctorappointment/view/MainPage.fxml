<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.Label?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.doctor.doctorappointment.controller.MainPageController" style="-fx-background-color: #f4f7fc; -fx-font-family: 'Segoe UI', sans-serif; -fx-alignment: center;">
    <children>
        <!-- Title -->
        <Label layoutX="206.0" layoutY="50.0" prefHeight="39.0" prefWidth="188.0" text="Welcome" textFill="#0f89fc" style="-fx-font-size: 30px; -fx-font-weight: bold;"/>

        <!-- Create Account Button -->
        <Button layoutX="230.0" layoutY="150.0" prefHeight="50.0" prefWidth="140.0" text="Create Account" onAction="#goToRegistrationPage" style="-fx-background-color: #1AA7EC; -fx-text-fill: white; -fx-font-size: 16px; -fx-border-radius: 5px; -fx-padding: 10px; -fx-cursor: hand;"/>

        <!-- Login Button -->
        <Button layoutX="230.0" layoutY="230.0" prefHeight="50.0" prefWidth="140.0" text="Login" onAction="#goToLoginPage" style="-fx-background-color: #7DD6F6; -fx-text-fill: white; -fx-font-size: 16px; -fx-border-radius: 5px; -fx-padding: 10px; -fx-cursor: hand;"/>
    </children>
</AnchorPane>
