<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.doctor.doctorappointment.controller.AddAppointmentController">
    <VBox alignment="CENTER" spacing="20" layoutX="50" layoutY="50">
        <ComboBox fx:id="patientComboBox" promptText="Select Patient" />
        <ComboBox fx:id="doctorComboBox" promptText="Select Doctor" />
        <ComboBox fx:id="serviceComboBox" promptText="Select Service" />
        <DatePicker fx:id="appointmentDatePicker" />
        <Button fx:id="saveAppointmentBtn" text="Add Appointment" onAction="#handleSubmitAppointment" />
        <Button fx:id="cancelBtn" text="Cancel" onAction="#handleCancel" />
    </VBox>
</AnchorPane>
